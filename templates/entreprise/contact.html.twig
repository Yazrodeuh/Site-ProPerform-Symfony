        <div id="test" class="py-3" style="background-image: linear-gradient(to bottom, white 55%, transparent 100%)">
            <div class="container py-2">
                <div class="text-center py-3">
                    <h2>Formulaire de contact</h2>
                </div>
                <div>
                    {{ form_start(my_form, {'attr': {'class': 'needs-validation', 'novalidate': ''}}) }}
                    {{ form_errors(my_form) }}
                    <div class="row justify-content-center g-3">
                        <div class="col-md-5 px-4 py-2">
                            <div class="form-floating">
                                {{ form_widget(my_form.prenomC) }}
                                {{ form_label(my_form.prenomC) }}
                                {{ form_errors(my_form.prenomC) }}
                                <div class="invalid-feedback">
                                    Veuillez remplir ce champ obligatoire.
                                </div>
                            </div>
                        </div>
                        <div class="col-md-5 px-4 py-2">
                            <div class="form-floating">
                                {{ form_widget(my_form.nomC) }}
                                {{ form_label(my_form.nomC) }}
                                {{ form_errors(my_form.nomC) }}
                                <div class="invalid-feedback">
                                    Veuillez remplir ce champ obligatoire.
                                </div>
                            </div>
                        </div>
                        <div class="col-md-5 px-4 py-2">
                            <div class="form-floating">
                                {{ form_widget(my_form.mailC) }}
                                {{ form_label(my_form.mailC) }}
                                {{ form_errors(my_form.mailC) }}
                                <div class="invalid-feedback">
                                    L'adresse e-mail doit être indiquée dans un format approprié.
                                </div>
                            </div>
                        </div>
                        <div class="col-md-5 px-4 py-2">
                            <div class="form-floating">
                                {{ form_widget(my_form.telC) }}
                                {{ form_label(my_form.telC) }}
                                {{ form_errors(my_form.telC) }}
                            </div>
                        </div>
                        <div class="col-md-10 px-4 py-2">
                            <div class="form-floating">
                                {{ form_widget(my_form.optionC) }}
                                {{ form_label(my_form.optionC) }}
                                {{ form_errors(my_form.optionC) }}
                                <div class="invalid-feedback">
                                    Veuillez sélectionner l'objet de la demande de contact.
                                </div>
                            </div>
                        </div>
                        <div class="col-md-10 px-4 py-2">
                            <div class="form-floating">
                                {{ form_widget(my_form.messageC) }}
                                {{ form_label(my_form.messageC) }}
                                {{ form_errors(my_form.messageC) }}
                            </div>
                        </div>
                        <div class="col-md-10 px-4 py-2">
                            <div class="form-check">
                                {{ form_widget(my_form.copieC) }}
                                {{ form_label(my_form.copieC) }}
                                {{ form_errors(my_form.copieC) }}
                            </div>
                        </div>
                        <div class="col-md-10 px-4 py-2">
                            <div class="form-check">
                                {{ form_widget(my_form.cgvC)}}
                                {{ form_label(my_form.cgvC) | raw}}
                                {{ form_errors(my_form.cgvC) }}
                            </div>
                        </div>

                        <div class="col-10 text-center">
                            <input type="hidden" id="recaptchaRep" name="recaptcha-Rep">
                            {{ form_label(my_form.envoyerC) }}
                            {{ form_widget(my_form.envoyerC) }}
                        </div>


                    </div>
                    {{ form_end(my_form) }}
                </div>
            </div>
        </div>

    </div>




