                                            <div class="publication"> {{ actu.dateactualite | date("m/d/Y") }} | {{ actu.titreactualite }}</div>
                                            <div class="actu_desc"> {{ actu.descriptionactualite | slice(0, 150)}} ...</div>
                                        </div>
                                        <div class="lireActu">
                                            Lire l'actualité
                                        </div>
                                    </div>
                                </a>
                            </div>
                        {% endfor %}
                    </div> #}
                </div>
                <div class="col-lg-3">
                    {% include('actualite/infoActu.html.twig') %}
                </div>
            </div>
        </div>

    </div>







{% endblock %}