{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    Formations continue des professionnels de l'immobilier
{% endblock %}

{% set descriptionPage = "Formations continues des professionnels de l’immobilier (Alur) pour renouveler vos cartes professionnelles d’agent immobilier et attestations d’habilitation d’agent commercial." %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/formation/entreprise.css') }}">
    <link rel="stylesheet" href="{{ asset('css/formation/formation.css') }}">
{% endblock %}

{% block body %}
<div class="bg-image-entete" style="background-image: url('{{ asset('img/formation/entreprise/entreprise_frise.jpeg') }}')">
    <div class="pt-5">
        <div class="py-5 d-flex justify-content-center">
            <div class="text-center p-3 rounded-pill" style="background-color: var(--entre-1-color)">
                <h1>Formations des agents immobiliers (Loi ALUR)</h1>
            </div>
        </div>
    </div>
    <div class="container-lg ">
        <div class="w-100 d-flex row row-cols-1 g-4 my-2 m-auto">
            <div class="col-12">
                <div class="card h-100 border-2 rounded-10" style="border-color: var(--entre-1-color)">
                    <div class="card-body">
                        <div class="card-text d-flex flex-row align-items-center" >
                            <div>
                                <p class="text-center">
                                    <strong>Vous avez pour projet de créer ou reprendre une entreprise ?</strong>
                                </p>
                                <p>
                                    Nos formations personnalisées sont adaptées à vos projets pour vous permettre d’assimiler toutes les informations administratives, juridiques et financières nécessaires à la création ou à la reprise d’une entreprise .
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div style="background-image: linear-gradient(to bottom, white, transparent)">
        <div class="container">
            <div class="mt-5 pt-4 h5 text-center">
                <p>
                    <strong>Nous vous proposons ainsi quatre formules :</strong>
                </p>
            </div>
        </div>
        <div>
            {% include 'formation/moduleDescription.html.twig' %}
        </div>
    </div>
        {% include 'formation/contactBasSimple.html.twig' %}
</div>
{% endblock %}